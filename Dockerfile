FROM node:23.10.0

WORKDIR /quickchat

COPY package.json .

RUN npm install

COPY . .

EXPOSE 3000

ENV PORT=3000

ENV MONGODB_URL=MONGODB_URL

ENV SECRET=SECRET

ENV ENV=development

ENV CLOUDINARY_CLOUD_NAME=CLOUDINARY_CLOUD_NAME

ENV CLOUDINARY_API_SECRET=CLOUDINARY_API_SECRET

ENV CLOUDINARY_API_KEY=CLOUDINARY_API_KEY

CMD ["npm","run","start"]